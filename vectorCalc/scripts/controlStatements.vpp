number iterator = 0;
vector vec = { 1, 1, 1 };

while(iterator < 10)
{
	// print the vector
	print vec;
	// increse the vector
	vec = vec + { 1, 1, 1 };
	
	// if the iterator is 5, then print it
	if(iterator == 5)
	{
		print iterator;
	}
	
	// increment the iterator
	iterator = iterator + 1;
}